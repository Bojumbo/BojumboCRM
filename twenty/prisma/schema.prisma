generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Pipeline {
  id        String   @id @default(cuid())
  name      String
  stages    Stage[]
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Stage {
  id         String   @id @default(cuid())
  name       String
  color      String?
  orderIndex Int      @default(0)
  pipelineId String
  pipeline   Pipeline @relation(fields: [pipelineId], references: [id])
  deals      Deal[]
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt
}

model Deal {
  id             String        @id @default(cuid())
  title          String
  description    String?
  amount         Decimal       @default(0)
  status         String        @default("OPEN") // STATUS: OPEN, WON, LOST
  stageId        String
  stage          Stage         @relation(fields: [stageId], references: [id])
  counterpartyId String?
  counterparty   Counterparty? @relation(fields: [counterpartyId], references: [id])
  products       DealProduct[]
  comments       Comment[]
  managers       User[]        @relation("DealManagers")
  createdAt      DateTime      @default(now())
  updatedAt      DateTime      @updatedAt
}

enum CounterpartyType {
  INDIVIDUAL
  COMPANY
}

model Counterparty {
  id            String           @id @default(cuid())
  type          CounterpartyType @default(INDIVIDUAL)
  name          String           // Full name or Company name
  taxId         String?          // EDRPOU or IPN
  email         String?
  phone         String?
  address       String?
  contactPerson String?          // For companies
  deals         Deal[]
  createdAt     DateTime         @default(now())
  updatedAt     DateTime         @updatedAt
}

model Product {
  id           String        @id @default(cuid())
  name         String
  sku          String?
  description  String?
  defaultPrice Decimal       @default(0)
  dealProducts DealProduct[]
  createdAt    DateTime      @default(now())
  updatedAt    DateTime      @updatedAt
}

model DealProduct {
  id          String   @id @default(cuid())
  dealId      String
  deal        Deal     @relation(fields: [dealId], references: [id])
  productId   String
  product     Product  @relation(fields: [productId], references: [id])
  quantity    Int      @default(1)
  priceAtSale Decimal  @default(0)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model Comment {
  id        String   @id @default(cuid())
  content   String
  dealId    String
  deal      Deal     @relation(fields: [dealId], references: [id])
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model DocumentTemplate {
  id        String   @id @default(cuid())
  name      String
  filePath  String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model User {
  id        String     @id @default(cuid())
  email     String     @unique
  password  String
  name      String?
  roleId    String?
  role      Role?      @relation(fields: [roleId], references: [id])
  status    UserStatus @default(PENDING)
  managedDeals Deal[]     @relation("DealManagers")
  createdAt    DateTime   @default(now())
  updatedAt    DateTime   @updatedAt
}

model Role {
  id          String   @id @default(cuid())
  name        String   @unique
  description String?
  permissions Json?    // Resource-specific permissions
  users       User[]
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

enum UserStatus {
  PENDING
  ACTIVE
  REJECTED
}

